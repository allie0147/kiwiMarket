<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_item_left"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/medium"
    android:paddingTop="@dimen/small"
    android:paddingRight="@dimen/medium">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_left_profile_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="start"
        android:contentDescription="@string/profile_img"
        android:src="@drawable/round_account_circle_24"
        app:civ_border_color="@android:color/black"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/chat_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small"
        android:layout_marginLeft="@dimen/small"
        android:layout_marginTop="@dimen/medium_large"
        android:layout_toEndOf="@id/chat_left_profile_image"
        android:layout_toRightOf="@id/chat_left_profile_image"
        android:background="@drawable/chat_bubble_left"
        android:fontFamily="@font/noto_sans_regular"
        android:includeFontPadding="false"
        android:maxWidth="250dp"
        android:padding="@dimen/medium"
        android:text="MESSAGE.MESSAGE.MESSAGE.MESSAGE.MESSAGE.MESSAGE.MESSAGE.MESSAGE.MESSAGE.MESSAGE.MESSAGE.MESSAGE.MESSAGE.MESSAGE.MESSAGE.MESSAGE.MESSAGE.MESSAGE.MESSAGE.MESSAGE.MESSAGE.MESSAGE.MESSAGE.MESSAGE.MESSAGE"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sfont" />

    <TextView
        android:id="@+id/chat_wdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chat_message"
        android:layout_marginStart="@dimen/small_medium"
        android:layout_marginLeft="@dimen/small_medium"
        android:layout_toEndOf="@id/chat_message"
        android:layout_toRightOf="@id/chat_message"
        android:fontFamily="@font/noto_sans_regular"
        android:includeFontPadding="false"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/ssfont" />
</RelativeLayout>